using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace StaticMember
{
    class Program
    {
        static void Main(string[] args)
        {
            Program.Customer();//If a method is declared as static it can oly be called with ClassName
        }
        public static void Customer()
        {         
        Console.WriteLine("Please enter first name: ");
        String FirstName = Console.ReadLine();
         Console.WriteLine("Please enter second name: ");
        String LastName = Console.ReadLine();
         Console.WriteLine("The Best Customer of the year is: {0}",FirstName+ " " +LastName);           
        }
    }
}
